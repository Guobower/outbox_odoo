<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
	<data>
		<record model="ir.ui.view" id="monitoramento_kanban">
			<field name="name">monitoramento.kanban</field>
			<field name="model">monitoramento</field>
			<field name="view_type">kanban</field>
			<field name="priority" eval="16" />
			<field name="arch" type="xml">
				<!-- view content: <form>, <tree>, <graph>, ... -->
				<kanban default_group_by="stage_id" edit="false">
					<field name="stage_id" />
					<field name="responsavel" />
					<field name="create_uid" />
					<field name="color" />
					<templates>
						<field name="stage_id" />
						<t t-name="kanban-box">
							<div
								t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
								<div class="oe_dropdown_toggle oe_dropdown_kanban">
									<span class="oe_e">í</span>
									<ul class="oe_dropdown_menu">
										<t t-if="widget.view.is_action_enabled('edit')">
											<li>
												<a type="edit">Edit...</a>
											</li>
										</t>
										<t t-if="widget.view.is_action_enabled('delete')">
											<li>
												<a type="delete">Delete</a>
											</li>
										</t>
										<li>
											<ul class="oe_kanban_colorpicker" data-field="color" />
										</li>
									</ul>
								</div>
								<div class="oe_kanban_content">
									<div>
										<b>
											<field name="name" />
										</b>
									</div>
									<div>
										<b style="color: #AAAAAA">
											<i>
												<field name="descricao" />
											</i>
										</b>
									</div>
									<div class="oe_kanban_bottom_right">
										<img
											t-att-src="kanban_image('res.users', 'image_small', record.create_uid.raw_value)"
											t-att-title="record.create_uid.value" width="24" height="24"
											class="oe_kanban_avatar pull-right" />
										<div class="pull-left" groups="base.group_user">
											<field name="prioridade" widget="priority" />
										</div>
									</div>
									<div class="oe_kanban_bottom_left"
										style="margin-top: 5px; border-top: 1px solid #AAAAAA; clear: both;">
										<div>
											Previsão:
											<b style="color: #AAAAAA;font-style: italic;">
												<field name="data_previsao" />
											</b>
										</div>
										<div>
											Conclusão:
											<b style="color: #AAAAAA;font-style: italic;">
												<field name="data_conclusao" />
											</b>
										</div>
									</div>
									<div class="oe_kanban_bottom_right">
										Responsável pelo Atendimento 
										<img
											t-att-src="kanban_image('res.users', 'image_small', record.responsavel.raw_value)"
											t-att-title="record.responsavel.value" width="24" height="24"
											class="oe_kanban_avatar pull-right" />
									</div>
								</div>
								<div class="oe_clear" />
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
	</data>
</openerp>