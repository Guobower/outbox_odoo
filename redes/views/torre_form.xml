<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
	<data>
		<record model="ir.ui.view" id="torre_form">
			<field name="name">torre.form</field>
			<field name="model">torre</field>
			<field name="view_type">form</field>
			<field name="priority" eval="16" />
			<field name="arch" type="xml">
				<!-- view content: <form>, <tree>, <graph>, ... -->
				<form string="Torres">
					<sheet string="Torres">
						<group string="Informações Principais">
							<group>
								<field name="name" string="Nome" />
								<field name="altura" />
								<field name="id_syncron" />
							</group>
							<group>
								<field name="latitude" />
								<field name="longitude" />
								<field name="sustentavel" />
							</group>
						</group>
						<group string="Endereço">
							<group>
								<field name="logradouro" />
								<field name="numero" />
								<field name="bairro" />
								<field name="complemento" />
							</group>
							<group>
								<field name="cep" />
								<field name="estado" on_change="on_change_estado(estado)" options="{'no_create': True}" />
								<field name="cidade" options="{'no_create': True}" />
								<field name="ponto_referencia" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
	</data>
</openerp>