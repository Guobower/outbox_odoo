<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
	<data>
		<record model="ir.ui.view" id="area_resolvedora_form">
			<field name="name">area_resolvedora.form</field>
			<field name="model">area_resolvedora</field>
			<field name="view_type">form</field>
			<field name="priority" eval="16" />
			<field name="arch" type="xml">
				<!-- view content: <form>, <tree>, <graph>, ... -->
				<form string="Area resolvedora">
					<sheet string="Area resolvedora">

						<group string="Informações Principais">
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="descricao" string="Descrição" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
	</data>
</openerp>