<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="tecnico_form">
            <field name="name">tecnico.form</field>
            <field name="model">tecnico</field>
            <field name="view_type">form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <!-- view content: <form>, <tree>, <graph>, ... -->
                <form string="Tecnico">
                    <sheet string="Tecnico">
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button" type="object"
                                    name="sincronizar_dados"
                                    icon="fa-edit" string="Observação">
                            </button>
                        </div>
                        <group>
                            <group string="Informações Principais">
                                <field name="name" string="Nome" />
                                <field name="usuario" />
                                <field name="email" />
                                <field name="telefone" />
                            </group>
                            <group string="Dados do Goon">
                                <field name="codigo_usuario" />
                                <field name="codigo_verificacao" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>